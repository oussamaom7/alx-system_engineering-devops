#!/usr/bin/env bash
# This script displays numbers from 1 to 100 with FizzBuzz conditions

# Loop from 1 to 100
for ((i=1; i<=100; i++)); do
    # Check if the number is a multiple of both 3 and 5 (FizzBuzz)
    if ((i % 3 == 0)) && ((i % 5 == 0)); then
        echo "FizzBuzz"
    # Check if the number is a multiple of 3 (Fizz)
    elif ((i % 3 == 0)); then
        echo "Fizz"
    # Check if the number is a multiple of 5 (Buzz)
    elif ((i % 5 == 0)); then
        echo "Buzz"
    # Otherwise, just display the number
    else
        echo "$i"
    fi
done
